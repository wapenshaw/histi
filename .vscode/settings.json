{
	// Histi Workspace settings!
	"workbench.colorTheme": "Mowgli",
	"debug.openExplorerOnEnd": true,

	// EXT - Code Header
	"codeheader.author": "Siddharth Abbineni",
	"codeheader.contact": "thescarletcars@gmail.com",

	// EXT - Custom Region Folding
	"maptz.regionfolder": {
		"[jsonc]": {
			"foldEnd": "/* #endregion */",
			"foldEndRegex": "/\\*[\\s]*#endregion",
			"foldStart": "/* #region  [NAME] */",
			"foldStartRegex": "^[\\s]*/\\*[\\s]*#region[\\s]*(.*)[\\s]*\\*/[\\s]*$"
		}
	},
	// Prettier Settings

	// EXT - Live Server Settings
	"liveServer.settings.port": 2802,
	"liveServer.settings.useBrowserPreview": true,

	// Browser Preview Settings
	"browser-preview.startUrl": "http://localhost:2802/app/index.html",

	// Exclude from explorer
	"files.exclude": {
		"node_modules/": true,
		"**/*.min.*": true
		// "dist/": true
	},
	// Use Installed Typescript
	"typescript.tsdk": "node_modules\\typescript\\lib"
}
